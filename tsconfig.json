{
	"include": ["src/**/*"],
	"exclue": ["src/**/*.test.ts", "node_modules"],
	"compilerOptions": {
		"target": "ES2015",
		"module": "es2015",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist/types",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
